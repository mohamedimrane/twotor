					<!-- Tweet button -->
					<div>
						<button class="px-6 py-2 text-cyan-100 bg-cyan-500 hover:bg-cyan-600 transition duration-75 rounded-full">Twoot</button>
					</div>
				</div>
			</div>
		</div>
	}
}
